generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Portfolio {
  id            Int        @id @default(autoincrement())
  title         String     @unique
  descriptions  String?
  featuredImage String
  imageGallery  String[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  tools         Tool[]
  platforms     Platform[]
  skills        Skill[]
  tags          Tag[]
}

model Tool {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imageUrl   String
  portfolios Portfolio[]
}

model Platform {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imageUrl   String
  portfolios Portfolio[]
}

model Skill {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  portfolios Portfolio[]
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  portfolios Portfolio[]
}

